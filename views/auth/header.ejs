<header class="mb-auto py-2">
  <div class="d-flex justify-content-between align-items-center container">
    <!-- Logo -->
    <h3 class="mb-0">
      <a class="fw-bold text-white text-decoration-none" style="font-size: 20px;" href="/">X-System</a>
    </h3>

    <% if (user) { %>
      <div class="d-flex align-items-center gap-3">
        <p class="mb-0 text-white">Welcome <%= user.email %>
        </p>
        <a href="/signout" class="btn btn-danger btn-sm rounded-pill px-3 shadow-sm">
          <i class="bi bi-box-arrow-right me-1"></i> Log out
        </a>

        <% } else { %>
          <!-- Navigation -->
          <nav class="d-flex gap-2">
            <a class="fw-bold btn px-3 py-1 <%= currentPage === " login" ? "btn-light text-dark" : "btn-outline-light"
              %> fixed-btn" href="/login">
              Log in
            </a>
            <a class="fw-bold btn px-3 py-1 <%= currentPage === " signup" ? "btn-light text-dark" : "btn-outline-light"
              %> fixed-btn" href="/signup">
              Sign up
            </a>
          </nav>
          <% } %>
      </div>
</header>

<style>
  .fixed-btn {
    font-size: 14px !important;
    padding: 6px 14px !important;
    white-space: nowrap;
    text-decoration: none !important;
  }
</style>